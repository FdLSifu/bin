#!/bin/bash

if [[ $(lsmod | grep hci_uart) == "" ]] 
then 
    zenity --password | sudo -S modprobe hci_uart
    sleep 5
fi

echo "power on" | bluetoothctl
# Jaybird 2
echo "connect C0:28:8D:A9:7E:8D" | bluetoothctl

# Tune wireless 
#echo "connect C0:28:8D:AF:D3:CF" | bluetoothctl
# megablast
#echo "connect EC:81:93:0A:16:BE" | bluetoothctl
